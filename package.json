{
  "name": "@LordMendes/lgpd-mcp",
  "version": "0.1.0",
  "description": "MCP Server para auxiliar na conformidade com a LGPD (Lei Geral de Proteção de Dados Pessoais)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "lgpd-mcp": "dist/index.js"
  },
  "mcpName": "io.github.LordMendes/lgpd-mcp",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:mcp": "npx @modelcontextprotocol/inspector npx tsx src/index.ts",
    "start:http": "tsx src/http.ts",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "lgpd",
    "proteção de dados",
    "model-context-protocol",
    "privacy",
    "gdpr",
    "compliance"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LordMendes/lgpd-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/LordMendes/lgpd-mcp/issues"
  },
  "homepage": "https://github.com/LordMendes/lgpd-mcp#readme",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.18"
  }
}
